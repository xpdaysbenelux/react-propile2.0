/*******************************
         Site Overrides
*******************************/

.ui.button {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;

  &.btn-primary {
    background-color: #343334;
    color: #ffffff;
  }

  &.btn-secondary {
    background-color: #efefef;
    color: #343334;
  }

  &.btn-warning {
    background-color: #e45f55;
    color: #ffffff;
  }
}

